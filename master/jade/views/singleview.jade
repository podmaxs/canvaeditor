h3
  // START Language list
  .pull-right
    .btn.btn-primary(ng-click="new()")
      | Add
    .btn-group(uib-dropdown='', is-open='language.listIsOpen')
      button.btn.btn-default(type='button', uib-dropdown-toggle="")
        | {{language.selected}}
        span.caret
      ul.dropdown-menu.dropdown-menu-right.animated.fadeInUpShort(role='menu')
        li(ng-repeat='(localeId, langName) in language.available')
          a(ng-click='language.set(localeId, $event)') {{langName}}
  // END Language list

  | Single View
  small {{ 'dashboard.WELCOME' | translate:{ appName: app.name } }}  !
.panel.panel-default
  table.table.table-hover
    thead
      tr
        th(ng-repeat="col in cols")
          {{col.title}}
        th.text-center(width="50px")
          | Action
    tbody
      tr(ng-repeat="ent in list")
        td(ng-repeat="key in cols")
          {{ent[key.key].get()}}
        td.text-center(width="50px")
          .btn.btn-primary(ng-click="edit(ent)")
            |Edit
